<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:id="@+id/relativeLayout"
        android:layout_above="@+id/buttonPick"
        android:layout_alignRight="@+id/buttonPick"
        android:layout_alignEnd="@+id/buttonPick"
        android:layout_marginBottom="26dp">
    <AutoCompleteTextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/autoCompleteTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:drawableRight="@drawable/marker"
        android:padding="15dp"
        android:hint="Enter a new delivery Location"
        android:backgroundTint='#ffffff'
        >
    </AutoCompleteTextView>
        <!--<ImageView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:src="@drawable/marker"-->
            <!--android:layout_alignRight="@id/autoCompleteTextView"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_marginLeft="50dp"-->
          <!--/>-->
    </RelativeLayout>

    <TextView
        android:id="@+id/place_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="all"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Choose Current Location"
        android:id="@+id/buttonPick"
        android:padding="10dp"
        android:background="@drawable/border"
        android:layout_marginBottom="28dp"
        android:drawableRight="@drawable/map"
        android:drawablePadding="15dp"
        android:layout_above="@+id/buttonSaved"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Choose from Saved Location"
        android:id="@+id/buttonSaved"
        android:drawableRight="@drawable/folder"
        android:padding="15dp"
        android:background="@drawable/border"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selected Place"
        android:id="@+id/textview_selectedlocation"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="99dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/button_ok"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:background="#1fbad6"/>
</RelativeLayout>
